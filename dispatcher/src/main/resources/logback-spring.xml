<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>
                %highlight(%-5level) %magenta(%d{yyyy-MM-dd HH:mm:ss}) %cyan(%logger{15}) -%boldRed(%replace(%marker){'^.+$',' $0'}) %msg%n%ex{short}
            </pattern>
        </encoder>
    </appender>

    <appender name="DISPATCHER_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./log/dispatcher.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./log/dispatcher-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%-5level %d{yyyy-MM-dd HH:mm:ss} %logger{36} -%replace(%marker){'^.+$',' $0'} %msg%n%ex{short}</pattern>
        </encoder>
    </appender>

    <logger name="com.bipbup" level="debug" additivity="false">
        <appender-ref ref="DISPATCHER_FILE"/>
    </logger>

    <logger name="com.bipbup" level="debug">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <root level="error">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
